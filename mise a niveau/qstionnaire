def recup_reponse(choix):    
    while True:
        reponse = input(f"Saisir la reponse(entre 1 et {len(choix)}): ")
        try:
            reponse = int(reponse)
            if 1<= reponse <= len(choix):
                return reponse
            else:
                print(f"ERREUE: veuillez entrer un nombre entre 1 et {len(choix)}")
        except:
            print("ERREU: veuillez entrer un nombre entier")

def poser_question(question):
    print("Question: ",question[0])
    choix = question[1]
    for i in range(len(choix)):
        print(" ",i+1,"-",choix[i])
    
    reponse = recup_reponse(choix)
           
    bnn_reponse = choix.index(question[2])+1
    if reponse == bnn_reponse:
        print("Bonne reponse!")
        return True
    else:
        print("Mauvaise reponse")
        return False

questions = (
     
    ("Quelle est la capitale du Togo? ",
        ("Lome", "Karra", "Cinkasse"),
        "Lome"
    ),
    ("Quelle est la capitale de la France? ",
        ("Lome", "Karra", "Cinkasse"),
        "Lome"
    ),
    ("Quelle est la capitale du PAys bas ",
        ("Lome", "Karra", "Cinkasse"),
        "Lome"
    ) 
)
def lancer_questionnaire(questions):
    score = 0
    for question in questions:
        # veri =  poser_question(question)
        if poser_question(question):
            score +=1
            print("Score: ",score)
        else:
            print("Score: ",score)
                
lancer_questionnaire(questions)    